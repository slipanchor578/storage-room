{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc アクティブなファイルのチェック",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=c2x",
                "-Wall",
                "-Wextra",
                "-Werror=narrowing",
                "-pedantic-errors",
                "-fdiagnostics-color=always",
                "-g",
                "-fsanitize=address",
                "-march=native",
				"-fsyntax-only",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "コンパイラ: /usr/bin/gcc"
		},
				{
			"type": "cppbuild",
			"label": "C/C++: gcc アクティブなファイルのビルド",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=c2x",
                "-Wall",
                "-Wextra",
                "-Werror=narrowing",
                "-pedantic-errors",
                "-fdiagnostics-color=always",
                "-g",
                "-fsanitize=address",
                "-march=native",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "コンパイラ: /usr/bin/gcc"
		}
	]
}